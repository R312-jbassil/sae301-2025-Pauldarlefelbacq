---
import CustomisationLunettes from '../components/CustomisationLunettes.astro';
import pb from '../../backend/backend.mjs';

// Get all materials for dropdowns
const materialsMonture = await pb.collection('Mat_monture').getFullList();
const materialsBranches = await pb.collection('Mat_branches').getFullList();

interface Props {
  lunetteId?: string;
  user: any;
}

const { lunetteId, user } = Astro.props;

let existingGlasses = null;
if (lunetteId) {
  existingGlasses = await pb.collection('Lunette').getOne(lunetteId, {
    expand: 'id_mat_m,id_mat_b'
  });
}

// Predefined color swatches
const colorSwatches = [
  '#C0C0C0', '#A9A9A9', '#808080',
  '#696969', '#404040', '#000000'
];

// Predefined lens types with prices
const lensTypes = [
  { value: 'claire', label: 'Verres clairs', price: 0 },
  { value: 'solaire', label: 'Lunettes de soleil', price: 30 },
  { value: 'lumiere-bleue', label: 'Lumière bleue', price: 25 },
  { value: 'progressif', label: 'Progressifs', price: 80 },
  { value: 'anti-reflet', label: 'Anti-reflet', price: 15 },
  { value: 'photochromique', label: 'Photochromiques', price: 60 }
];

// Material prices mapping (you can adjust these)
const materialPrices: Record<string, number> = {
  'bois': 10,
  'acier': 20,
  'carbone': 50,
  'or': 150,
};

// Mapping des couleurs pour chaque type de verres
const lensColors: Record<string, string> = {
  'claire': 'transparent',
  'solaire': '#2C2C2C',
  'lumiere-bleue': '#E6F3FF',
  'progressif': '#F0F0F0',
  'anti-reflet': '#FFFACD',
  'photochromique': '#D8BFD8'
};

// Déterminer la couleur des verres
const verresColor = existingGlasses?.verres ? (lensColors[existingGlasses.verres] || 'transparent') : 'transparent';
---

<div class="glasses-configurator min-h-screen bg-[#F5F5F5] flex flex-col">
  <div class="flex-1 grid grid-cols-1 lg:grid-cols-2 gap-0 max-w-full mx-auto">
    
    <div class="bg-blanc border-r border-gris p-4 sm:p-6 lg:p-8 flex flex-col">
      <form id="glasses-form" class="flex-1 flex flex-col">
        
        <div class="mb-4 sm:mb-6 space-y-3">
          <input 
            type="text" 
            id="Nom-lunettes" 
            name="Nom"
            value={existingGlasses?.Nom || ''}
            class="input input-bordered w-full bg-blanc border-gris text-grisA text-sm sm:text-base"
            placeholder="Nom de vos lunettes"
            required
          />
          <div class="relative">
            <input 
              type="number" 
              id="prix-lunettes" 
              name="prix"
              value={existingGlasses?.prix || '50'}
              min="0"
              step="0.01"
              class="input input-bordered w-full bg-[#F5F5F5] border-gris text-grisA font-bold cursor-not-allowed text-sm sm:text-base"
              placeholder="Prix (€)"
              readonly
              required
            />
            <span class="absolute right-3 top-1/2 -translate-y-1/2 text-xs text-gris hidden sm:inline">Calculé automatiquement</span>
          </div>
        </div>
        
        <div role="tablist" class="tabs tabs-bordered mb-4 sm:mb-6 overflow-x-auto">
          <a role="tab" class="tab tab-active text-grisA font-medium text-xs sm:text-sm whitespace-nowrap" data-tab="branches">Branches</a>
          <a role="tab" class="tab text-grisA font-medium text-xs sm:text-sm whitespace-nowrap" data-tab="monture">Monture</a>
          <a role="tab" class="tab text-grisA font-medium text-xs sm:text-sm whitespace-nowrap" data-tab="verres">Verres</a>
          <a role="tab" class="tab text-grisA font-medium text-xs sm:text-sm whitespace-nowrap" data-tab="largeur">Largeur</a>
        </div>

        <div id="tab-branches" class="tab-content flex-1 flex flex-col">
          <h3 class="text-xs sm:text-sm text-grisA mb-4 sm:mb-6">Personnalisation</h3>
          
          <div class="mb-6 sm:mb-8">
            <h4 class="text-lg sm:text-xl font-bold text-grisA mb-3 sm:mb-4">Branches</h4>
            
            <div class="grid grid-cols-3 sm:grid-cols-3 gap-2 sm:gap-3 mb-4 sm:mb-6">
              {colorSwatches.map((color) => (
                <button 
                  type="button"
                  class="color-swatch aspect-square rounded border-2 border-gris hover:border-grisA transition-colors cursor-pointer"
                  style={`background-color: ${color}`}
                  data-color={color}
                  data-target="branches"
                />
              ))}
            </div>
            
            <select 
              id="branches-material" 
              name="id_mat_b"
              class="select select-bordered w-full bg-blanc border-gris text-grisA mb-3 text-sm sm:text-base"
              required
            >
              <option disabled selected>Matériau des branches</option>
              {materialsBranches.map((mat) => {
                const matName = mat.libelle_mat_b?.toLowerCase() || '';
                const price = materialPrices[matName] || 0;
                return (
                  <option 
                    value={mat.id}
                    selected={existingGlasses?.id_mat_b === mat.id}
                    data-price={price}
                  >
                    {mat.libelle_mat_b} {price > 0 ? `(+${price}€)` : ''}
                  </option>
                );
              })}
            </select>
          </div>

          <div class="mt-auto mb-4 sm:mb-6">
            <p class="text-xl sm:text-2xl font-bold text-grisA">Prix : <span id="price-branches">80</span>€</p>
          </div>

          <button 
            type="button" 
            class="continue-btn btn btn-outline border-grisA text-grisA hover:bg-grisA hover:text-blanc w-full text-sm sm:text-base"
            data-next="monture"
          >
            Continuer
          </button>
        </div>

        <div id="tab-monture" class="tab-content flex-1 flex-col" style="display: none;">
          <h3 class="text-xs sm:text-sm text-grisA mb-4 sm:mb-6">Personnalisation</h3>
          
          <div class="mb-6 sm:mb-8">
            <h4 class="text-lg sm:text-xl font-bold text-grisA mb-3 sm:mb-4">Monture</h4>
            
            <div class="grid grid-cols-3 sm:grid-cols-3 gap-2 sm:gap-3 mb-4 sm:mb-6">
              {colorSwatches.map((color) => (
                <button 
                  type="button"
                  class="color-swatch aspect-square rounded border-2 border-gris hover:border-grisA transition-colors cursor-pointer"
                  style={`background-color: ${color}`}
                  data-color={color}
                  data-target="monture"
                />
              ))}
            </div>
            
            <select 
              id="monture-material" 
              name="id_mat_m"
              class="select select-bordered w-full bg-blanc border-gris text-grisA mb-3 text-sm sm:text-base"
              required
            >
              <option disabled selected>Matériau de la monture</option>
              {materialsMonture.map((mat) => {
                const matName = mat.libelle_mat_m?.toLowerCase() || '';
                const price = materialPrices[matName] || 0;
                return (
                  <option 
                    value={mat.id}
                    selected={existingGlasses?.id_mat_m === mat.id}
                    data-price={price}
                  >
                    {mat.libelle_mat_m} {price > 0 ? `(+${price}€)` : ''}
                  </option>
                );
              })}
            </select>
          </div>

          <div class="mt-auto mb-4 sm:mb-6">
            <p class="text-xl sm:text-2xl font-bold text-grisA">Prix : <span id="price-monture">80</span>€</p>
          </div>

          <button 
            type="button" 
            class="continue-btn btn btn-outline border-grisA text-grisA hover:bg-grisA hover:text-blanc w-full text-sm sm:text-base"
            data-next="verres"
          >
            Continuer
          </button>
        </div>

        <div id="tab-verres" class="tab-content flex-1 flex-col" style="display: none;">
          <h3 class="text-xs sm:text-sm text-grisA mb-4 sm:mb-6">Personnalisation</h3>
          
          <div class="mb-6 sm:mb-8">
            <h4 class="text-lg sm:text-xl font-bold text-grisA mb-3 sm:mb-4">Type de verres</h4>
            
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-2 sm:gap-3 mb-4 sm:mb-6">
              {lensTypes.map((lens) => (
                <button 
                  type="button"
                  class="lens-type-btn p-3 sm:p-4 rounded border-2 border-gris hover:border-grisA transition-colors cursor-pointer"
                  data-lens-type={lens.value}
                  data-lens-price={lens.price}
                >
                  <div class="text-xs sm:text-sm font-medium text-grisA mb-1">{lens.label}</div>
                  <div class="text-xs text-vert font-semibold">+{lens.price}€</div>
                </button>
              ))}
            </div>
          </div>

          <div class="mt-auto mb-4 sm:mb-6">
            <p class="text-xl sm:text-2xl font-bold text-grisA">Prix : <span id="price-verres">80</span>€</p>
          </div>

          <button 
            type="button" 
            class="continue-btn btn btn-outline border-grisA text-grisA hover:bg-grisA hover:text-blanc w-full text-sm sm:text-base"
            data-next="largeur"
          >
            Continuer
          </button>
        </div>

        <div id="tab-largeur" class="tab-content flex-1 flex-col" style="display: none;">
          <h3 class="text-xs sm:text-sm text-grisA mb-4 sm:mb-6">Personnalisation</h3>
          
          <div class="mb-6 sm:mb-8">
            <h4 class="text-lg sm:text-xl font-bold text-grisA mb-3 sm:mb-4">Largeur du pont</h4>
            
            <p class="text-xs sm:text-sm text-gris mb-4 sm:mb-6">
              Ajustez la largeur du pont pour un confort optimal
            </p>
            
            <div class="mb-4">
              <input 
                type="range" 
                id="largeur-pont" 
                name="largeur_pont"
                min="14" 
                max="24" 
                value={existingGlasses?.largeur_pont || '18'}
                class="range range-neutral range-xs"
                step="1"
              />
              <div class="flex justify-between text-xs text-gris px-2 mt-2">
                <span>14mm</span>
                <span>19mm</span>
                <span>24mm</span>
              </div>
            </div>
            
            <div class="text-center mb-6">
              <p class="text-sm text-gris mb-2">Largeur sélectionnée</p>
              <p class="text-3xl font-bold text-grisA">
                <span id="largeur-value">{existingGlasses?.largeur_pont || '18'}</span>mm
              </p>
            </div>
          </div>

          <div class="mt-auto mb-4 sm:mb-6">
            <p class="text-xl sm:text-2xl font-bold text-grisA">Prix : <span id="price-largeur">80</span>€</p>
          </div>

          <button 
            type="submit" 
            class="btn bg-vert text-blanc hover:bg-vert/90 border-none w-full text-sm sm:text-base"
          >
            {lunetteId ? 'Mettre à jour' : 'Finaliser'}
          </button>
        </div>

        <!-- Hidden Inputs -->
        <input type="hidden" id="branches-color" name="branches" value={existingGlasses?.branches || '#C0C0C0'} />
        <input type="hidden" id="monture-color" name="monture" value={existingGlasses?.monture || '#C0C0C0'} />
        <input type="hidden" id="verres-type" name="verres" value={existingGlasses?.verres || 'claire'} />
        <input type="hidden" id="code-svg" name="code_SVG" />

      </form>
      <p id="status" class="mt-4 text-center text-sm sm:text-base"></p>
    </div>

    <div class="bg-blanc p-4 sm:p-6 lg:p-12 flex flex-col items-center justify-center relative min-h-[400px]">
      <div id="glasses-preview" class="w-full max-w-full sm:max-w-2xl mb-6 sm:mb-8">
        <CustomisationLunettes 
          montureColor={existingGlasses?.monture || '#C0C0C0'}
          brancheColor={existingGlasses?.branches || '#C0C0C0'}
          strokeColor="#1D1D1B"
          verresColor={verresColor}
          className="glasses-svg w-full h-auto"
        />
      </div>

      <div class="absolute bottom-4 sm:bottom-8 right-4 sm:right-8 flex items-center gap-2">
        <div id="progress-circle" class="radial-progress text-grisA" style="--value:25; --size:2.5rem; --thickness: 3px;" role="progressbar">
          <span class="text-xs font-bold" id="progress-text">25%</span>
        </div>
      </div>

  <div class="bg-blanc border-t border-gris py-4 sm:py-6">
    <div class="max-w-4xl mx-auto px-4 sm:px-6">
      <ul class="steps w-full">
        <li class="step step-neutral" data-step="branches">
          <span class="text-xs sm:text-sm font-medium text-grisA hidden sm:inline">Branches</span>
          <span class="text-xs sm:text-sm font-medium text-grisA sm:hidden">1</span>
        </li>
        <li class="step" data-step="monture">
          <span class="text-xs sm:text-sm font-medium text-gris hidden sm:inline">Monture</span>
          <span class="text-xs sm:text-sm font-medium text-gris sm:hidden">2</span>
        </li>
        <li class="step" data-step="verres">
          <span class="text-xs sm:text-sm font-medium text-gris hidden sm:inline">Verres</span>
          <span class="text-xs sm:text-sm font-medium text-gris sm:hidden">3</span>
        </li>
        <li class="step" data-step="largeur">
          <span class="text-xs sm:text-sm font-medium text-gris hidden sm:inline">Largeur<br>du pont</span>
          <span class="text-xs sm:text-sm font-medium text-gris sm:hidden">4</span>
        </li>
        <li class="step" data-step="finalisation">
          <span class="text-xs sm:text-sm font-medium text-gris hidden sm:inline">Finalisation</span>
          <span class="text-xs sm:text-sm font-medium text-gris sm:hidden">✓</span>
        </li>
      </ul>
    </div>
  </div>
</div>

<style>
  .color-swatch {
    transition: all 0.2s ease;
  }
  
  .color-swatch:hover {
    transform: scale(1.05);
  }
  
  .color-swatch.active {
    border-color: #1D1D1B !important;
    box-shadow: 0 0 0 2px #1D1D1B;
  }

  .lens-type-btn {
    transition: all 0.2s ease;
  }

  .lens-type-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
  }

  .lens-type-btn.active {
    border-color: #1D1D1B !important;
    background-color: #F5F5F5;
  }

  .tab {
    border-bottom: 2px solid transparent;
  }

  .tab-active {
    border-bottom-color: #1D1D1B !important;
    font-weight: 600;
  }

  .tab-content {
    animation: fadeIn 0.3s ease-in;
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  .steps .step::before {
    background-color: #D1D5DB;
  }

  .steps .step-neutral::before {
    background-color: #1D1D1B;
  }
</style>

<script define:vars={{ lunetteId, user }}>
  let currentStep = 0;
  const stepNames = ['branches', 'monture', 'verres', 'largeur'];
  const progressPercentages = [25, 50, 75, 100];

  const tabs = document.querySelectorAll('[data-tab]');
  const tabContents = {
    'branches': document.getElementById('tab-branches'),
    'monture': document.getElementById('tab-monture'),
    'verres': document.getElementById('tab-verres'),
    'largeur': document.getElementById('tab-largeur')
  };

  function switchToTab(tabName) {
    const tabIndex = stepNames.indexOf(tabName);
    if (tabIndex !== -1) {
      currentStep = tabIndex;
    }

    tabs.forEach(t => t.classList.remove('tab-active'));
    const activeTab = Array.from(tabs).find(t => t.dataset.tab === tabName);
    if (activeTab) activeTab.classList.add('tab-active');
    
    Object.entries(tabContents).forEach(([name, content]) => {
      if (name === tabName) {
        content.style.display = 'flex';
      } else {
        content.style.display = 'none';
      }
    });

    updateProgress();
    updateSteps();
  }

  tabs.forEach(tab => {
    tab.addEventListener('click', (e) => {
      e.preventDefault();
      switchToTab(tab.dataset.tab);
    });
  });

  const continueBtns = document.querySelectorAll('.continue-btn');
  continueBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      const nextTab = btn.dataset.next;
      if (nextTab) {
        switchToTab(nextTab);
      }
    });
  });

  function updateProgress() {
    const progressCircle = document.getElementById('progress-circle');
    const progressText = document.getElementById('progress-text');
    const percentage = progressPercentages[currentStep];
    
    progressCircle.style.setProperty('--value', percentage);
    progressText.textContent = `${percentage}%`;
  }

  function updateSteps() {
    const steps = document.querySelectorAll('.step');
    steps.forEach((step, index) => {
      if (index <= currentStep) {
        step.classList.add('step-neutral');
      } else {
        step.classList.remove('step-neutral');
      }
    });
  }

  const colorSwatches = document.querySelectorAll('.color-swatch');
  const branchesColorInput = document.getElementById('branches-color');
  const montureColorInput = document.getElementById('monture-color');
  const glassesSvg = document.querySelector('.glasses-svg');

  colorSwatches.forEach(swatch => {
    swatch.addEventListener('click', (e) => {
      const color = swatch.dataset.color;
      const target = swatch.dataset.target;
      
      const siblings = swatch.parentElement.querySelectorAll('.color-swatch');
      siblings.forEach(s => s.classList.remove('active'));
      
      swatch.classList.add('active');
      
      if (target === 'branches') {
        branchesColorInput.value = color;
        glassesSvg.style.setProperty('--branche-color', color);
      } else if (target === 'monture') {
        montureColorInput.value = color;
        glassesSvg.style.setProperty('--monture-color', color);
      }
      
      updateCodeSVG();
    });
  });

  const lensTypeBtns = document.querySelectorAll('.lens-type-btn');
  const verresTypeInput = document.getElementById('verres-type');

  // Mapping des couleurs pour chaque type de verres
  const lensColors = {
    'claire': 'transparent',
    'solaire': '#2C2C2C',
    'lumiere-bleue': '#E6F3FF',
    'progressif': '#F0F0F0',
    'anti-reflet': '#FFFACD',
    'photochromique': '#D8BFD8'
  };

  lensTypeBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      const lensType = btn.dataset.lensType;
      
      lensTypeBtns.forEach(b => b.classList.remove('active'));
      
      btn.classList.add('active');
      
      verresTypeInput.value = lensType;
      
      // Mettre à jour la couleur des verres dans le SVG
      const verresColor = lensColors[lensType] || 'transparent';
      glassesSvg.style.setProperty('--verres-color', verresColor);
      
      // Recalculer le prix total
      calculateTotalPrice();
    });
  });

  const largeurSlider = document.getElementById('largeur-pont');
  const largeurValue = document.getElementById('largeur-value');

  if (largeurSlider) {
    largeurSlider.addEventListener('input', (e) => {
      largeurValue.textContent = e.target.value;
    });
  }

  // Prix de base
  const BASE_PRICE = 50;
  const prixInput = document.getElementById('prix-lunettes');
  const priceDisplays = ['price-branches', 'price-monture', 'price-verres', 'price-largeur'];

  // Fonction pour calculer le prix total automatiquement
  function calculateTotalPrice() {
    let total = BASE_PRICE;
    
    // Prix du matériau des branches
    const branchesMaterial = document.getElementById('branches-material');
    if (branchesMaterial && branchesMaterial.selectedIndex > 0) {
      const selectedOption = branchesMaterial.options[branchesMaterial.selectedIndex];
      const branchesPrice = parseFloat(selectedOption.dataset.price) || 0;
      total += branchesPrice;
    }
    
    // Prix du matériau de la monture
    const montureMaterial = document.getElementById('monture-material');
    if (montureMaterial && montureMaterial.selectedIndex > 0) {
      const selectedOption = montureMaterial.options[montureMaterial.selectedIndex];
      const monturePrice = parseFloat(selectedOption.dataset.price) || 0;
      total += monturePrice;
    }
    
    // Prix des verres
    const activeLensBtn = document.querySelector('.lens-type-btn.active');
    if (activeLensBtn) {
      const lensPrice = parseFloat(activeLensBtn.dataset.lensPrice) || 0;
      total += lensPrice;
    }
    
    // Mettre à jour l'input prix et tous les affichages
    if (prixInput) {
      prixInput.value = total.toFixed(2);
    }
    updatePriceDisplays();
    
    return total;
  }

  // Mettre à jour les affichages de prix
  function updatePriceDisplays() {
    const prix = prixInput ? prixInput.value : '50';
    priceDisplays.forEach(id => {
      const element = document.getElementById(id);
      if (element) {
        element.textContent = prix;
      }
    });
  }

  // Écouter les changements de matériaux
  const branchesMaterialSelect = document.getElementById('branches-material');
  const montureMaterialSelect = document.getElementById('monture-material');
  
  // Fonction simple pour appliquer les textures
  function applyTexture(materialName, target) {
    const material = materialName?.toLowerCase() || '';
    const textureMap = {
      'bois': 'url(#texture-bois)',
      'carbone': 'url(#texture-carbone)',
      'or': 'url(#texture-or)'
    };
    
    if (textureMap[material]) {
      glassesSvg.style.setProperty(`--${target}-fill`, textureMap[material]);
    } else {
      glassesSvg.style.setProperty(`--${target}-fill`, '');
    }
  }
  
  if (branchesMaterialSelect) {
    branchesMaterialSelect.addEventListener('change', function() {
      const selectedOption = this.options[this.selectedIndex];
      const materialName = selectedOption.textContent.split('(')[0].trim();
      applyTexture(materialName, 'branche');
      calculateTotalPrice();
    });
  }
  
  if (montureMaterialSelect) {
    montureMaterialSelect.addEventListener('change', function() {
      const selectedOption = this.options[this.selectedIndex];
      const materialName = selectedOption.textContent.split('(')[0].trim();
      applyTexture(materialName, 'monture');
      calculateTotalPrice();
    });
  }

  function updateCodeSVG() {
    const montureColor = montureColorInput.value;
    const branchesColor = branchesColorInput.value;
    const svgCode = `monture:${montureColor},branches:${branchesColor}`;
    document.getElementById('code-svg').value = svgCode;
  }

  const initialMontureColor = montureColorInput.value;
  const initialBranchesColor = branchesColorInput.value;
  glassesSvg.style.setProperty('--monture-color', initialMontureColor);
  glassesSvg.style.setProperty('--branche-color', initialBranchesColor);
  
  // Initialiser la couleur des verres
  const initialLensType = verresTypeInput.value;
  const initialVerresColor = lensColors[initialLensType] || 'transparent';
  glassesSvg.style.setProperty('--verres-color', initialVerresColor);
  
  updateCodeSVG();

  colorSwatches.forEach(swatch => {
    const color = swatch.dataset.color;
    const target = swatch.dataset.target;
    if (target === 'branches' && color === initialBranchesColor) {
      swatch.classList.add('active');
    } else if (target === 'monture' && color === initialMontureColor) {
      swatch.classList.add('active');
    }
  });

  lensTypeBtns.forEach(btn => {
    if (btn.dataset.lensType === initialLensType) {
      btn.classList.add('active');
    }
  });

  // Calculer le prix initial au chargement
  calculateTotalPrice();
  
  // Initialiser l'affichage des prix
  updateProgress();
  updateSteps();

  const form = document.getElementById('glasses-form');
  const status = document.getElementById('status');

  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    const formData = new FormData(form);
    
    // user is already available from define:vars
    if (!user || !user.id) {
      status.textContent = 'Vous devez être connecté pour créer des lunettes';
      status.className = 'mt-4 text-center text-error';
      return;
    }

    const data = {
      Nom: formData.get('Nom'),
      prix: parseFloat(formData.get('prix')),
      code_SVG: formData.get('code_SVG'),
      verres: formData.get('verres'),
      branches: formData.get('branches'),
      monture: formData.get('monture'),
      largeur_pont: formData.get('largeur_pont'),
      id_mat_b: formData.get('id_mat_b'),
      id_mat_m: formData.get('id_mat_m'),
      id_user: user.id
    };

    try {
      let response;
      if (lunetteId) {
        response = await fetch(`/apis/lunettes/${lunetteId}`, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data),
          credentials: 'include'
        });
      } else {
        response = await fetch('/apis/lunettes', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data),
          credentials: 'include'
        });
      }

      if (response.ok) {
        status.textContent = lunetteId ? 'Lunettes mises à jour !' : 'Lunettes créées avec succès !';
        status.className = 'mt-4 text-center text-success';
        
        if (!lunetteId) {
          setTimeout(() => {
            window.location.href = '/profil';
          }, 1500);
        }
      } else {
        const error = await response.json();
        status.textContent = error.error || 'Une erreur est survenue';
        status.className = 'mt-4 text-center text-error';
      }
    } catch (error) {
      console.error('Error:', error);
      status.textContent = 'Erreur de connexion';
      status.className = 'mt-4 text-center text-error';
    }
  });

  updateProgress();
  updateSteps();
</script>
